{
  "name": "debian-setup",
  "version": "1.14.0",
  "description": "Debian, Ubuntu, and Raspberry Pi system setup scripts",
  "author": "PatEvs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patevs/debian-setup.git"
  },
  "scripts": {
    "updates": "npx ncu",
    "release": "np"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "commitlint-config-gitmoji": "^2.2.5",
    "husky": "^4.3.6",
    "np": "^7.5.0"
  },
  "commitlint": {
    "extends": [
      "gitmoji"
    ],
    "rules": {
      "subject-empty": [
        0,
        "never"
      ],
      "type-empty": [
        0,
        "never"
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
